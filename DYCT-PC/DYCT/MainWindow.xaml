<Window x:Class="DYCT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DYCT" Height="350" Width="525" Background="Transparent" ResizeMode="NoResize">
    <Grid Name="Master"  Background="#ff282c35">
        <TextBlock HorizontalAlignment="Left" Foreground="#ffeeeeee" Margin="10,10,0,0" TextWrapping="Wrap" Text="Did You Commit Today?" VerticalAlignment="Top"/>
        <Grid Name="Submit">
            <Label Content="Insert username" Foreground="#ffeeeeee" HorizontalAlignment="Left" Margin="198,122,0,0" VerticalAlignment="Top"/>
            <TextBox Name="UsernameInput" Margin="198,148,0,0" TextWrapping="Wrap" Text="" Height="24" VerticalAlignment="Top" HorizontalAlignment="Left" Width="121"/>
            <Button Content="Check" Margin="221,177,0,0" RenderTransformOrigin="0.307,1.318" Height="22" VerticalAlignment="Top" HorizontalAlignment="Left" Width="75" Click="UsernameButton"/>
            <Label Name="TimeToday" Content="Label" HorizontalAlignment="Left" Margin="90,242,0,0" VerticalAlignment="Top"/>
        </Grid>
        <Label Name="Potato" Content="Label" HorizontalAlignment="Left" Margin="10,273,0,0" VerticalAlignment="Top" Width="499"/>
    </Grid>
</Window>
